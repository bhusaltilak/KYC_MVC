@model IEnumerable<KYC>
@{
    ViewData["Title"] = "Dashboard";
}
<h2>Dashboard</h2>
<a asp-action="Create" class="btn btn-primary">New Submission</a>
<table class="table">
    <thead>
        <tr>
            <th> Name</th>
            <th>Address</th>
            <th>Phone </th>
            <th>Email</th>
            <th>Province </th>
            <th>District</th>
            <th>VDC</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Province</td>
                <td>@item.District</td>
                <td>@item.VDC</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>


                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/js/dashboard.js"></script>
